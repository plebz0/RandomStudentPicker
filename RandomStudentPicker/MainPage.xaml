<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RandomStudentPicker.MainPage">

    <ScrollView>
        <VerticalStackLayout
        Padding="30,0"
        Spacing="25">
            <Label
            Text="First Name"/>
            <Entry
            x:Name="firstNameEntry"
            Placeholder="Enter first name of new Student" />
            <Label
            Text="Last Name"/>
            <Entry
            x:Name="lastNameEntry"
            Placeholder="Enter last name of new student"/>
            <Label
            Text="Class"/>
            <Entry
            x:Name="classEntry"
            Placeholder="Enter class of new student"/>

            <Button
            x:Name="NewStudentButton"
            Text="Add new Student" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
